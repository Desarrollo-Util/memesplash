{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "paths": {
            "@user/*": ["src/user/*"],
            "@image/*": ["src/image/*"],
            "@shared/*": ["src/shared/*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    }
}
